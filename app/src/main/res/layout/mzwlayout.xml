<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="#00ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#89000000"
                android:layout_height="260dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/photozs"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true" />

                <TextView
                    android:id="@+id/photosm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="还没有照片来拍一个吧"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:layout_above="@+id/takephoto" />
                <ImageButton
                    android:id="@+id/takephoto"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:background="#85ababab"
                    android:src="@drawable/camera"
                    android:padding="4dp"
                    android:tint="#ffffff"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/mzw_xiangxi"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/hui5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/hua" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="名称"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/mzwmc"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:paddingLeft="20dp"
                        android:paddingRight="2dp"
                        android:text="名称"
                        android:textColor="#ffffff" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:padding="5dp"
                    android:background="@drawable/hui5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/nianling" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="年龄"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/mzwnl"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:paddingLeft="20dp"
                        android:paddingRight="2dp"
                        android:text="1997年8月8日"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/hui5"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/xiangxi" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="查看详细信息"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/mzwxx"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:paddingLeft="20dp"
                        android:paddingRight="2dp"
                        android:text="点击查看"
                        android:textColor="#f1de0e" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/hui5"
                    android:gravity="center"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/tijian" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:paddingLeft="20dp"
                        android:text="健康状况"
                        android:textColor="#ffffff" />
                    <TextView
                        android:id="@+id/mzwtj"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:paddingLeft="20dp"
                        android:paddingRight="2dp"
                        android:text="拍照体检"
                        android:textColor="#f1de0e" />
                </LinearLayout>

            </LinearLayout>
            <Button
                android:background="@drawable/bluebutton5"
                android:textColor="#ffffff"
                android:id="@+id/mzw_sq"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:text="隐藏" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
